<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tugas.editbuku.EditBukuActivity"
    android:background="#2527A0B0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="24dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_add_shopping_cart_24" />

            <TextView
                android:id="@+id/homepageTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Barang"
                android:textAlignment="center"
                android:textSize="30dp" />
        </RelativeLayout>

        <EditText
            android:id="@+id/editETBuku"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Barang"
            android:padding="12dp"
            android:background="@drawable/bg_description"/>

        <EditText
            android:id="@+id/editETHarga"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Harga"
            android:padding="12dp"
            android:background="@drawable/bg_description"/>

        <EditText
            android:id="@+id/editETGenre"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kategori"
            android:padding="12dp"
            android:background="@drawable/bg_description"/>

        <EditText
            android:id="@+id/editETPenulis"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Deskripsi"
            android:padding="12dp"
            android:background="@drawable/bg_description"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="30dp"
            android:id="@+id/editBTEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIMPAN PERUBAHAN"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textAllCaps="false"
            android:background="@drawable/bg_button"/>
    </LinearLayout>
</LinearLayout>